@article{nash_taking_2019,
	title = {Taking stock of Climate Change Acts in Europe: living policy processes or symbolic gestures?},
	volume = {19},
	issn = {1469-3062},
	url = {https://doi.org/10.1080/14693062.2019.1623164},
