	urldate = {2021-01-02},
	date = {2019-07-01},
	langid = {english},
	keywords = {Climate change adaptation, Developmental psychology, El Salvador, Local ownership, Meaning-making, Photovoice, Transformation},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\jan_m\\Zotero\\storage\\TGJY52YX\\Hochachka - 2019 - On matryoshkas and meaning-making Understanding t.pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\jan_m\\Zotero\\storage\\89CMIPVG\\S0959378018309762.html:text/html},
