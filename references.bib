	note = {Publisher: Taylor \& Francis
\_eprint: https://doi.org/10.1080/14693062.2021.1878008},
	keywords = {climate change governance, Climate change advisory bodies, Committee on Climate Change, {UK} climate policy},
	file = {Full Text PDF:C\:\\Users\\jan_m\\Zotero\\storage\\JTSUYENB\\Averchenkova et al. - 2021 - The influence of climate change advisory bodies on.pdf:application/pdf;Snapshot:C\:\\Users\\jan_m\\Zotero\\storage\\766NXW3T\\14693062.2021.html:text/html},
