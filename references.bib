	urldate = {2021-10-17},
	date = {2020-10-01},
	langid = {english},
	keywords = {Politics, Fossil fuels, Covid-19, Renewables, Social practices, Sustainable energy transition},
	file = {ScienceDirect Snapshot:C\:\\Users\\jan_m\\Zotero\\storage\\WS9L7YNY\\S2214629620302607.html:text/html;Texte intégral:C\:\\Users\\jan_m\\Zotero\\storage\\TTTCLNRF\\Kuzemko et al. - 2020 - Covid-19 and the politics of sustainable energy tr.pdf:application/pdf},
